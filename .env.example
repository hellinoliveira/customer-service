# --- Configurações Gerais ---
TIMEZONE=America/Sao_Paulo

# --- PostgreSQL (Compartilhado Kestra + Evolution) ---
POSTGRES_USER=pedalando_user
POSTGRES_PASSWORD=pedalando_secure_pass
POSTGRES_DB_KESTRA=kestra_prod
POSTGRES_DB_EVOLUTION=evolution_prod

# --- Redis (Dedicado Docker) ---
REDIS_PASSWORD=redis_secure_pass

# --- Evolution API ---
# Porta que você vai acessar no navegador/API: http://seuvps:8081
EVOLUTION_PORT=8081
# Chave Mestra para controlar a API (v2)
AUTHENTICATION_API_KEY=change_me_to_a_secure_key
# URL pública da sua VPS (importante para Webhooks)
# Para local: http://localhost:8081
EVOLUTION_BASE_URL=http://localhost:8081

# Expor API KEY no fetchInstances (true/false)
AUTHENTICATION_EXPOSE_IN_FETCH_INSTANCES=true

# --- Kestra ---
# Porta do painel do Kestra: http://seuvps:8080
KESTRA_PORT=8080
KESTRA_MANAGEMENT_PORT=8082
KESTRA_ADMIN_USER=pedalandoali@kestra.io
KESTRA_ADMIN_PASSWORD=change_me_kestra_password

